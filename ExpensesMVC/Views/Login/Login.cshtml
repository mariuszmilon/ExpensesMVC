@model ExpensesMVC.Data.Login;

<h1>Login</h1>
@if (TempData["Error"] != null)
{
        <h2 class="alert-danger">@TempData["Error"]</h2>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-3">
                <label asp-for="Nick" class="control-label"></label>
                <input asp-for="Nick" class="form-control" />
                <span asp-validation-for="Nick" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input type="submit" value="Log in" class="btn btn-success my-3 px-4 py-1"/>
        </form>
    </div>
</div>
 